- raffles = []
- @raffles.each do |raffle| 
  - raffles << raffle.number.to_s
header.header
  nav.navbar.navbar-light.bg-light.fixed-top
    a.navbar-brand.p-2.text-black href="#{root_path}" << Volver
    
.row.after-nav
  .col
    p Selecciona uno o más números, y dale al botón comprar.
.row
  .schedule
    = form_for 'numbers', url: new_raffle_path, method: :get do
      .body.selected-number 
        - 700.times.each do |number|
          - unless raffles.include? (number+1).to_s
            input.form-control type="checkbox" name="number[#{number+1}]" class="day" id="#{number+1}"
              label[for="#{number+1}"] = number+1
          - else
            .day.invalid
              p.day-number = number+1

        .row.float
          .col-12.mb-2[style="color: black"]
            h3 N° Seleccionados
          .col-12.cant-num[style="color: black"]
            h3 0
          .col-12
            button.btn.btn-outline-primary id="comprar"  type="submit"  Comprar